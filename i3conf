# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym j resize shrink width 5 px or 5 ppt
        bindsym k resize grow height 5 px or 5 ppt
        bindsym l resize shrink height 5 px or 5 ppt
        bindsym semicolon resize grow width 5 px or 5 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 5 px or 5 ppt
        bindsym Down resize grow height 5 px or 5 ppt
        bindsym Up resize shrink height 5 px or 5 ppt
        bindsym Right resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

# Volume control
bindsym XF86AudioRaiseVolume exec "amixer set Master 5%+; twmnc --id 6600 --title 'Volume' --content $(~/.config/i3/scripts/twmn_content.sh get_volume)"
bindsym XF86AudioLowerVolume exec "amixer set Master 5%-; twmnc --id 6600 --title 'Volume' --content $(~/.config/i3/scripts/twmn_content.sh get_volume)"
bindsym XF86AudioMute exec "amixer set Master toggle; twmnc --id 6600 --title 'Volume' --content $(~/.config/i3/scripts/twmn_content.sh get_muted)"

# Backlight control
bindsym XF86MonBrightnessUp exec "xbacklight -inc 5; twmnc --id 6600 --title 'Brightness' --content $(~/.config/i3/scripts/twmn_content.sh get_brightness)%"
bindsym XF86MonBrightnessDown exec "xbacklight -dec 5; twmnc --id 6600 --title 'Brightness' --content $(~/.config/i3/scripts/twmn_content.sh get_brightness)%"

bindsym $mod+r mode "resize"

# Autostart applications
exec --no-startup-id compton
exec --no-startup-id twmnd
exec --no-startup-id fcitx
exec --no-startup-id nm-applet

# Fix terminal colours
exec "xrdb -merge ~/.Xresources"

# Autostart MPD with correct config
exec --no-startup-id "mpd --kill && mpd ~/.config/mpd/mpd.conf"

# Set wallpaper with feh
exec_always --no-startup-id "feh --bg-scale --no-fehbg ~/Pictures/ヤマノススメ/mpv-shot0003_dark.jpg"

# Reload Redshift with suitable colour temperature for current time
# Nighttime is 21:00 - 8:00
exec_always --no-startup-id "if [ $(( 10#$(date +%H) )) -ge 21 ]; then redshift -PO 4250k; elif [ $(( 10#$(date +%H) )) -lt 8 ]; then redshift -PO 4250k; else redshift -PO 6500k; fi;"

bindsym $mod+0 exec i3lock -f -o
bindsym $mod+F2 exec waterfox

# Open the following in floating mode
for_window [class="Arandr"] floating enable

