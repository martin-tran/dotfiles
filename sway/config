# Light
set $menu "bemenu-run --fn 'IBM Plex Mono SemiBold 12' --tb '#FEFEFE' --fb '#FEFEFE' --nb '#FEFEFE' --hb '#FEFEFE' --sb '#FEFEFE' --hf '#EAB255' --tf '#EAB255' --nf '#000000' --ff '#4C76B9'"
set $lock "swaylock -e -f --font 'IBM Plex Mono Text' -s fill -i /home/thereca/Pictures/yosumi_呼吸.png"

